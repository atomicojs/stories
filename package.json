{
  "name": "@atomico/stories",
  "description": "a repo to start with atomico",
  "workspaces": [
    "src/**/*",
    "site"
  ],
  "version": "1.9.0",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "vite --force",
    "build": "vite build",
    "test": "wtr src/**/*.test.js --node-resolve",
    "exports": "exports src/core.ts --exports --types --main core",
    "prepublishOnly": "npm run exports",
    "create-component": "scaff template/component-jsx src"
  },
  "dependencies": {
    "@atomico/hooks": "^3.49.1",
    "atomico": "^1.74.3",
    "highlight.js": "^11.9.0",
    "scrollable-component": "^1.2.0"
  },
  "devDependencies": {
    "@atomico/postcss-tokens": "^3.2.0",
    "@atomico/scaffold": "^0.2.0",
    "@atomico/tsconfig": "^1.1.2",
    "@atomico/vite": "^2.15.2",
    "postcss-import": "^15.1.0",
    "typescript": "^4.6.2",
    "vite": "^4.5.0"
  },
  "author": "UpperCod",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/atomicojs/stories.git"
  },
  "homepage": "https://github.com/atomicojs/stories",
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "@atomico/postcss-tokens": {
        "defaultValue": true,
        "prefix": "stories"
      }
    }
  }
}
